{
  "name": "@disguised-uchiha/react-comp-lib-boilerplate",
  "version": "1.0.18",
  "description": "A boilerplate for react component library creation",
  "types": "build/index.d.ts",
  "module": "build/index.js",
  "homepage": "http://disguised-uchiha.github.io/react-comp-lib-boilerplate",
  "repository": {
    "type": "git",
    "url": "git@github.com:disguised-uchiha/react-comp-lib-boilerplate.git"
  },
  "files": [
    "/build"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@disguised-uchiha"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rollup -c",
    "build:webpack": "webpack --mode=development",
    "storybook": "start-storybook -p 6006",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "build-storybook": "build-storybook",
    "generate": "node ./util/create-component",
    "format": "prettier --write \"{,!(node_modules|dist|build|docs|notes|logs|uploads|coverage|.next)/**/}*.{js,jsx,ts,tsx,json}\"",
    "check-format": "prettier --check  \"{,!(node_modules|dist|build|docs|notes|logs|uploads|coverage|.next)/**/}*.{js,jsx,ts,tsx,json}\"",
    "check-lint": "eslint --ext ts --ext tsx --ext js ./",
    "check-type": "tsc --pretty --noEmit --skipLibCheck",
    "test-all": "npm run format && npm run check-format && npm run check-lint && npm run check-type"
  },
  "keywords": [
    "React",
    "Component",
    "Library",
    "Rollup",
    "Typescript",
    "Sass",
    "Storybook"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/addon-a11y": "^6.3.10",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.4",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.3.12",
    "@storybook/manager-webpack5": "^6.3.12",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.28.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "jest": "^27.0.4",
    "less-loader": "^9.1.0",
    "mini-css-extract-plugin": "^2.6.1",
    "node-sass": "^5.0.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "resolve-url-loader": "^5.0.0",
    "rollup": "^2.52.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.34.1",
    "sass-loader": "^10.2.1",
    "style-loader": "^1.3.0",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^27.0.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.4.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "@ant-design/compatible": "^1.0.8",
    "antd": ">=4.16.1",
    "react": ">=16.0.1",
    "react-dom": ">=16.0.1"
  },
  "dependencies": {
    "@ant-design/compatible": "^1.0.8",
    "@ant-design/icons": "^4.6.4",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.13.0",
    "@testing-library/react": "^11.2.7",
    "antd": ">=4.16.1",
    "classnames": "^2.3.1",
    "colors": "^1.4.0",
    "readline-sync": "^1.4.10"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.*(scss|css|sass|less)": [
      "stylelint --fix"
    ],
    "**/*.*(scss|css|sass|less|graphql|yml|yaml|md|mdx|json)": [
      "prettier --write"
    ]
  }
}
