{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "build",
    "module": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@root/*": ["./*"]
    }
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "storybook-static", "scripts", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
